<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cv_item"
    app:strokeColor="@color/gray"
    app:strokeWidth="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/gambar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/mahasiswa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            tools:text="NIM  " />
        <TextView
            android:id="@+id/npm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/nim"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            tools:text="211013011" />
        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toBottomOf="@id/nim"
            android:textColor="@color/black"
            tools:text="Nama  " />
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/nama"
            app:layout_constraintTop_toBottomOf="@id/npm"
            android:textColor="@color/black"
            tools:text="Kharisma Tio Pernanda" />

        <TextView
            android:id="@+id/jurusan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:textColor="@color/black"
            tools:text="Jurusan: " />
        <TextView
            android:id="@+id/jurusannya"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/jurusan"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:textColor="@color/black"
            tools:text=" Informatika" />

        <TextView
            android:id="@+id/jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toBottomOf="@id/jurusannya"
            android:textColor="@color/black"
            tools:text="Jenis Kelamin : " />
        <TextView
            android:id="@+id/kelamin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/jenis"
            app:layout_constraintTop_toBottomOf="@id/jurusannya"
            android:textColor="@color/black"
            tools:text=" Laki Laki" />
        <ImageView
            android:id="@+id/img_deletemahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/img_editmahasiswa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/baseline_mode_edit_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_deletemahasiswa"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/img_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_editmahasiswa"
            android:contentDescription="@string/todo" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/kelamin"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>