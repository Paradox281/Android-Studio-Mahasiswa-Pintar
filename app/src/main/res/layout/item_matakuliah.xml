<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cv_item"
    app:strokeColor="@color/gray"
    app:strokeWidth="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/gambar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="5dp"
            android:src="@drawable/mata"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />
        <TextView
            android:id="@+id/codemapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            tools:text="Kode Mata Kuliah : " />
        <TextView
            android:id="@+id/kode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/codemapel"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            tools:text="IFIFIFIF" />
        <TextView
            android:id="@+id/namemapel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toBottomOf="@id/codemapel"
            android:textColor="@color/black"
            tools:text="Nama Mata Kuliah : " />
        <TextView
            android:id="@+id/namamapel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/namemapel"
            app:layout_constraintTop_toBottomOf="@id/codemapel"
            android:textColor="@color/black"
            tools:text="Android" />
        <TextView
            android:id="@+id/sks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toBottomOf="@id/namemapel"
            android:textColor="@color/black"
            tools:text="SKS : " />
        <TextView
            android:id="@+id/sk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/sks"
            app:layout_constraintTop_toBottomOf="@id/namamapel"
            android:textColor="@color/black"
            tools:text="4" />

        <TextView
            android:id="@+id/semester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toBottomOf="@id/sks"
            android:textColor="@color/black"
            tools:text="Semester : " />
        <TextView
            android:id="@+id/sem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/img_delete"
            app:layout_constraintStart_toEndOf="@+id/semester"
            app:layout_constraintTop_toBottomOf="@id/sk"
            android:textColor="@color/black"
            tools:text="5" />

        <TextView
            android:id="@+id/jurusan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toBottomOf="@id/semester"
            android:textColor="@color/black"
            tools:text="Jurusan : " />

        <TextView
            android:id="@+id/jurus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/jurusan1"
            app:layout_constraintTop_toBottomOf="@id/sem"
            android:textColor="@color/black"
            tools:text="Informatika " />

        <ImageView
            android:id="@+id/img_deletemk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />
        <ImageView
            android:id="@+id/img_editmk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/baseline_mode_edit_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_deletemk"
            android:contentDescription="@string/todo" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sem"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>